{
  "name": "simple-gulp-start",
  "version": "1.0.0",
  "description": "Simple Gulp Start Template (scss, Browsersync, Uglify, cleanCSS, Autoprefixer)",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --debug app/js/",
    "lint:write": "eslint --debug app/js/ --fix",
    "prettier": "prettier --write app/js/**/*.js"
  },
  "author": "korolr",
  "license": "ISC",
  "devDependencies": {
    
  },
  "dependencies": {
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
        "*.js": [
          "npm run lint:write",
          "prettier --write",
          "git add"
        ],
        "*.scss": [
          "stylelint --fix --config ./.stylelintrc",
          "git add"
        ]
  }
}
